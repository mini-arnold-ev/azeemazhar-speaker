---
import Base from "~/layouts/Base.astro";
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";
import ContactForm from "~/components/ContactForm.astro";
import ChampionKit from "~/components/ChampionKit.astro";
---

<Base
  title="Begin a Conversation â€” Azeem Azhar"
  description="Azeem Azhar advises boards, investment committees, and leadership teams on how AI and exponential technologies reshape capital deployment, competitive position, and firm strategy."
>
  <Header />

  <main>
    <section class="pt-32 pb-16 md:pt-40 md:pb-20">
      <div class="container-page">
        <p class="label mb-6">Contact</p>
        <h1 class="text-display font-light mb-6">Begin a conversation.</h1>
        <p class="text-subhead text-muted font-light max-w-prose">
          Not a booking form. A starting point.
          Tell us about your event and what you're hoping to achieve.
        </p>
      </div>
    </section>

    <!-- Contact Form + Champion Kit Sidebar (cherry-picked from Beta) -->
    <section class="pb-16 md:pb-24">
      <div class="container-page">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-12 md:gap-16">
          <!-- Contact Form: 7 columns -->
          <div class="md:col-span-7">
            <ContactForm />
          </div>

          <!-- Champion Kit Sidebar: 5 columns -->
          <div class="md:col-span-5">
            <ChampionKit />

            <!-- Additional context (cherry-picked from Beta) -->
            <div class="mt-8 space-y-4">
              <div class="border-l-2 border-border pl-4">
                <p class="label mb-1">Based</p>
                <p class="text-small text-ink/80">London, UK. Travels worldwide.</p>
              </div>
              <div class="border-l-2 border-border pl-4">
                <p class="label mb-1">Response time</p>
                <p class="text-small text-ink/80">Typically within 48 hours.</p>
              </div>
              <div class="border-l-2 border-border pl-4">
                <p class="label mb-1">For press enquiries</p>
                <p class="text-small text-ink/80">Please use the form with "Media" in the description.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section-tight border-t border-border">
      <div class="container-prose">
        <p class="text-body text-muted text-center">
          Azeem typically accepts ~25 engagements per year.
          <br />Early conversations are encouraged.
        </p>
      </div>
    </section>
  </main>

  <Footer />
</Base>
