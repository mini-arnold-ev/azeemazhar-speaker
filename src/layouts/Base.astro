---
import "@fontsource-variable/inter";
import "~/styles/global.css";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = "Azeem Azhar advises boards, investment committees, and leadership teams on how AI and exponential technologies reshape capital deployment, competitive position, and firm strategy.",
  ogImage = "/images/Exponentially_Azeem_Azhar_Hollie_Adams_121.JPG",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(ogImage, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="Azeem Azhar" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@azeem" />
    <meta name="twitter:creator" content="@azeem" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Schema.org Person + SpeakerProfile -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Azeem Azhar",
      "url": "https://azeemazhar.com",
      "image": "https://azeemazhar.com/images/Exponentially_Azeem_Azhar_Hollie_Adams_121.JPG",
      "jobTitle": "Author, Investor & Analyst of Exponential Change",
      "worksFor": {
        "@type": "Organization",
        "name": "Exponential View",
        "url": "https://www.exponentialview.co"
      },
      "description": "Author of Exponential (FT Best Book 2021), founder of Exponential View (286K+ subscribers). Advises boards, investment committees, and leadership teams at Goldman Sachs, Harvard Business School, and 50+ organisations.",
      "sameAs": [
        "https://www.linkedin.com/in/azeem",
        "https://twitter.com/azeem",
        "https://www.exponentialview.co"
      ],
      "knowsAbout": [
        "Artificial Intelligence",
        "Exponential Technologies",
        "Capital Deployment & Investment Strategy",
        "Energy Transition",
        "Technology Economics"
      ],
      "alumniOf": [
        { "@type": "CollegeOrUniversity", "name": "Harvard Business School" },
        { "@type": "CollegeOrUniversity", "name": "University of Oxford" }
      ],
      "award": [
        "Financial Times Best Book of the Year 2021",
        "Vox Future Perfect 50 (2023)",
        "Honorary Doctorate, Hult International Business School (2023)",
        "Thinkers 50 Radar (2022)",
        "LinkedIn Top Voice (2016-2019)"
      ],
      "hasOccupation": {
        "@type": "Occupation",
        "name": "Technology Economist & Strategic Adviser",
        "occupationalCategory": "Analyst"
      }
    })} />

    <!-- Cloudflare Web Analytics -->
    <script defer src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "PLACEHOLDER_TOKEN"}'></script>
  </head>
  <body>
    <slot />
  </body>
</html>
